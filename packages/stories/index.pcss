:host {
  background-color: #f4f4f4;
  border-radius: 4px;
  filter: drop-shadow(0 10px 10px #888);
  position: relative;

  & .touch-panel {
    background-color: transparent;
    display: grid;
    height: 100%;
    grid-template-columns: 1fr 1fr;
    opacity: 0;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 2;
  }

  & wc-stories-story {
    height: 100%;
    position: absolute;
    width: 100%;
  }
}